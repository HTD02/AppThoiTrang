<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudChinh"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/thongbao"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_mes"
            android:id="@+id/btnhantin_thongbao"
            android:backgroundTint="#00000000"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_gio_hang"
            android:id="@+id/btgiohang_thongbao"
            android:backgroundTint="#00000000"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/rcv_thong_bao"/>
</LinearLayout>