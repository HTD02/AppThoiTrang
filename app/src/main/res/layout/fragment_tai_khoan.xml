<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudChinh"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="#AE9D9D"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="120dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="30dp"
                                android:id="@+id/card_avt">
                                <ImageButton
                                    android:id="@+id/image_avt"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"/>
                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:id="@+id/tv_ten_taikhoan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="22sp"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@id/card_avt"
                                android:text="@string/tenmau"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </RelativeLayout>
                </FrameLayout>

                <TextView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="@string/danhriengchotoi"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_coin"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/xu"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_free_delivery"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/mienphivanchuyen"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_gifts"
                            android:layout_gravity="center_horizontal" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="gift for you"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_voucher"
                            android:layout_gravity="center_horizontal" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/voucher"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_history"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/damua"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_van_chuyen"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/dangvanchuyen"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_tim"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/dathich"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_follow"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/theodoi"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:text="@string/tienich"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_invite"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/moiban"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_live20"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/live"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_setup"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/thietlaptaikhoan"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_support"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/trungtamhotro"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_vote"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/danhgia"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawableRight="@drawable/next"
                    android:gravity="left|right"
                    android:text="@string/dangxuat"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/taikhoan"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnhantin_taikhoan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#00000000"
                android:src="@drawable/ic_mes" />

            <ImageButton
                android:id="@+id/btgiohang_taikhoan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#00000000"
                android:src="@drawable/ic_gio_hang" />

            <ImageButton
                android:id="@+id/imgbt_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#00000000"
                android:src="@drawable/ic_menu" />

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>